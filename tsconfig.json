{
  "compilerOptions": {
    "lib": ["es2016", "esnext.asynciterable", "dom"],
    //"target": "es5",
    "module": "commonjs",
    "target": "es2016",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src"
  },
  "filesGlob": ["**/*.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
